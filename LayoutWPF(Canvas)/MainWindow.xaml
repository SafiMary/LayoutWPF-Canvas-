<Window x:Class="LayoutWPF_Canvas_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutWPF_Canvas_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Background="Lavender">
            <Button Background="PowderBlue" Content="Top 50 Left 40" Canvas.Top="50" Canvas.Left="40" />
            <Button Background="LightSkyBlue" Content="Top 70 Right 20" Canvas.Top="70" Canvas.Right="20"/>
            <Button Background="Green" Content="Bottom 50 Left 20" Canvas.Bottom="50" Canvas.Left="20"/>
            <Button Background="LightCyan" Content="Bottom 80 Right 40" Canvas.Bottom="80" Canvas.Right="40"/>
        </Canvas>
    </Grid>
</Window>
